<%= simple_form_for(@newspaper, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :editor %>

    <%= f.simple_fields_for(:subscription_plans) do |sub_form| %>
      <%= sub_form.input :price %>
      <%= sub_form.input :weekly, collection: [['Weekly',true] ,['Daily', false]], as: :radio_buttons, item_wrapper_class: 'inline', label: 'Type' %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary", value: "Save"%>
  </div>
<% end %>